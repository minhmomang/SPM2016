
$(function() {
	var list_comment=[];
	var source = null;
     var lang=get_lang_current();
	 exe_load_header(function(output) {
	   if(output==true){	      
		  
		   load_form_grid();	   
		   exec_load_data();
		  
	   }
       
	 });
 
  function exec_load_data(){
		blockbg();
		var pdata ={};	
		load_data(function(output){
			if(output==true){
				unblockbg();
				timer_load_data();
				source.localdata=list_comment;        	
                $("#idcomment").jqxGrid('updatebounddata');
         	    $('#idcomment').jqxGrid('clearselection');
			}
		},pdata);
	}
    function timer_load_data(){
    	setInterval(function(){
    		var pdata ={};	
    		load_data(function(output){
    			if(output==true){
    				unblockbg();
    				source.localdata=list_comment;        	
                    $("#idcomment").jqxGrid('updatebounddata');
             	    $('#idcomment').jqxGrid('clearselection');
    			}
    		},pdata);
        },5000);
    }
	function load_data(callback,pdata) {		
		list_comment= [];		 
		Return_get("CommentController", "get_list_message_manager", pdata, 'GET', function(data) {		
			if (data != null) {
				list_comment = data;
				callback(true);
			}else
            {
                	unblockbg();
            }
		});		       
	}
    
    
     
     function load_form_grid() {
        source = {
            localdata: list_comment,
            datatype: "array",
            datafields: [{
                name: 'id_customer',
                type: 'string'
            }, {
                name: 'id',
                type: 'string'
            }, {
                name: 'id_sub',
                type: 'string'
            }, {
                name: 'date',
                type: 'string'
            }, {
                name: 'name_customer',
                type: 'string'
            }, {
                name: 'timesend',
                type: 'string'
            },{
                name: 'message',
                type: 'string'
            }]

        };
        ///end source
        var dataAdapter = new $.jqx.dataAdapter(source);
        $("#idcomment").jqxGrid({
            width: get_width(),
            source: dataAdapter,
            columnsresize: true,
            pageable: true,
            height: get_height(),            
            selectionmode: 'checkbox',
            columns: [{
                text: 'ID',
                datafield: 'id',
                cellsalign: 'center',
                align: 'center',
                width: 150
            },{
                text: 'SUB ID',
                datafield: 'id_sub',
                cellsalign: 'center',
                align: 'center',
                width: 150
            },{
                text: 'Mã KH',
                datafield: 'id_customer',
                cellsalign: 'center',
                align: 'center',
                width: 150
            }, {
                text: 'Tên KH',
                datafield: 'name_customer',
                cellsalign: 'left',
                align: 'center',
                width: 150
            }, {
                text: 'Thời gian gửi',
                datafield: 'timesend',
                cellsalign: 'center',
                align: 'center',
                width: 200
            },{
                text: 'Nội dung gửi',
                datafield: 'message',
                cellsalign: 'center',
                align: 'center',
                width: 500
            }
            ]
        });  
        
    } //end 
     function get_id() {
		var getselectedrowindexes = $("#idcomment").jqxGrid('getselectedrowindexes');
		var id = '';
		if (getselectedrowindexes.length > 0) {
			if(getselectedrowindexes.length==1){
				var selectedRowData = $("#idcomment").jqxGrid('getrowdata',
						getselectedrowindexes[0]);
				id = selectedRowData["id"]+','+selectedRowData["id_sub"];
			}		
		}		
		return id;
	}
    
   	$("#btnload").click(function() {
		var id = get_id();
		if (id == null || id == '') {		  
            showdialog("dialogmanual",2,"Select Row","","");			
			return;
		}
		var arr = id.split(',');
		id = arr[0];
		subid = arr[1];
		viewpage(id,subid);
	});
   
	function viewpage(id,subid){
		
		PopupCenter(ReturnHosing_apache()+'admin/comment/confirmMessage.html?id='+id+'&subid='+subid,'xtf','900','800'); 
	}
});