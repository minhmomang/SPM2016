var page= 1;
var recordperpage = 9;
var total_page = 0;
var _ismobile = ismobile();
$(function(){
	
	exe_load_header_search(function(out){
		if(out==true){	
			if(!isPc()){
				recordperpage=6;
				$("#record_page").val("6");
			}
			get_page();
		}		
	});
	$("#nextpage").click(function(){
		page+=1;
		get_page();
	});
	$("#prevpage").click(function(){
		page-=1;
		get_page();
	});	
	$("#record_page").change(function(){		
		page = 1;
		recordperpage = $("#record_page").val();
		get_page();
	});
	
	
	
});
