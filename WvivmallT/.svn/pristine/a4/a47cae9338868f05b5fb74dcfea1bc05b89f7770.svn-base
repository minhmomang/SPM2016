$(function(){
	exe_load_header(function(output){
		if(output==true){		
			confirm_change_pass();	
		}
	});
	function confirm_change_pass(){
		var email = getUrlParameter('email');
		if(email==undefined){
			$("#content_confirm").text('Không tồn tại email');
			return;
		}
		var pdata = {
				'email':email				
			};
			Return_get('MemberController','confirm_register',pdata,'GET',function(data){
				unblockbg();
				if(data!=null){					
					var error = data.result;
					if(error==2){	
						$("#content_confirm").text('Không tồn tại email');
					}
					else if(error==3){	
						$("#content_confirm").text('Tài khoản đã được xác nhận, không thể xác nhận');
					}
					else if(error==1){	
						$("#content_confirm").text('Xác nhận không thành công');
					}
					else if(error==0){	
						$("#content_confirm").text('Xác nhận tài khoản thành công');
					}
					else{
						$("#content_confirm").text('Xác nhận tài khoản không thành công');
					}
				}
			});
	}
});