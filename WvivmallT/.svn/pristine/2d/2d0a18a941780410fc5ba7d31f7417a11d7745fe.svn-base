<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <welcome-file-list>
    <welcome-file>/index.html</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>spring</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>spring</servlet-name>
    <url-pattern>*.htm</url-pattern>
  </servlet-mapping>
  <context-param>
    <param-name>email</param-name>
    <param-value>1111</param-value>
  </context-param>
  <context-param>
    <param-name>password</param-name>
    <param-value>2222</param-value>
  </context-param>
  <context-param>
    <param-name>saveslideimage</param-name>
    <param-value>/upload/slide</param-value>
  </context-param>
  <context-param>
    <param-name>saveadvimage</param-name>
    <param-value>/upload/adv</param-value>
  </context-param>
  <context-param>
    <param-name>save_image_product</param-name>
    <param-value>/upload/product</param-value>
  </context-param>
  <context-param>
    <param-name>save_image_cate</param-name>
    <param-value>/upload/category</param-value>
  </context-param>
  <context-param>
    <param-name>save_image_cate_promotion</param-name>
    <param-value>/upload/categorypromotion</param-value>
  </context-param>
  <context-param>
    <param-name>save_image</param-name>
    <param-value>/upload/ckeditor</param-value>
  </context-param>
  <context-param>
    <param-name>save_image_writer</param-name>
    <param-value>/upload/Writer</param-value>
  </context-param>
  <context-param>
    <param-name>save_image_sale_acticle</param-name>
    <param-value>/upload/sale_acticle</param-value>
  </context-param>
  <context-param>
    <param-name>save_image_comment</param-name>
    <param-value>/upload/comment</param-value>
  </context-param>
  <context-param>
    <param-name>pathsaveimgckeditor</param-name>
    <param-value>http://vivmall.vn/Nvivmall/upload/ckeditor/</param-value>
  </context-param>
  <context-param>
    <param-name>urlconfirmforgetpass</param-name>
    <param-value>http://vivmall.vn/confirm_change_forget_password.html?email=@email??pass=@password</param-value>
  </context-param>
  <context-param>
    <param-name>urlconfirmregister</param-name>
    <param-value>http://vivmall.vn/confirm_register.html?email=@email</param-value>
  </context-param>
  <filter>
    <filter-name>encodingFilter</filter-name>
    <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
    <init-param>
      <param-name>forceEncoding</param-name>
      <param-value>true</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>encodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>